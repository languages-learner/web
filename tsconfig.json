{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom", "WebWorker"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    },
    "types": [
      "vitest/importMeta",
      "vite-plugin-pwa/client",
    ]
  },
  "include": [
    "src/**/*.vue",
    "src/**/*.ts",
    "src/**/*.cy.ts",
    "src/**/*.d.ts",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.d.ts",
    "auto-generated-imports/**/*.d.ts",
  ],
}
