{
  "compilerOptions": {
    "target": "esnext",
    "useDefineForClassFields": true,
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "jsx": "preserve",
    "sourceMap": true,
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "lib": ["esnext", "dom"],
    "baseUrl": ".",
    "paths": {
      "@/*": ["./src/*"],
      "@@/*": ["./*"]
    },
    "types": [
      "vitest/importMeta",
    ]
  },
  "include": [
    "src/**/*.{ts,vue}",
    "src/**/*.cy.{js,ts}",
    "src/**/*.d.ts",
    "types/**/*.ts",
    "types/**/*.d.ts",
    "tests/**/*.ts",
    "tests/**/*.d.ts",
    "auto-imports.d.ts",
    "components.d.ts",
  ],
}
